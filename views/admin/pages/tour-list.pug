extends ../layouts/default.pug

block main 
  h1.box-title Tour List

  //- Section 4
  section.section-4 
    .inner-wrap 
      .inner-item.inner-label
        <i class="fa-solid fa-filter"></i> Filter
      .inner-item
        select
          option(value="") Status 
          option(value="") Active 
          option(value="") Inactive  
      .inner-item
        select
          option(value="") Creator 
          option(value="") John Doe 
          option(value="") Jane Doe 
      .inner-item.inner-date
        input(type="date" placeholder="From")
        span -
        input(type="date" placeholder="To") 
      .inner-item 
        select
          option(value="") -- Category --
          option(value="") Category 1 
          option(value="") Category 2 
          option(value="") Category 3
      .inner-item
        select
          option(value="") -- Price Range --
          option(value="") Lower than $200 
          option(value="") $200 - $500 
          option(value="") $500 - $700
          option(value="") $700 - $1000
          option(value="") Higher than $1000
      .inner-item.inner-reset 
        <i class="fa-solid fa-rotate-left"></i> Clear Filter
  //- End Section 4

  //- Section 5
  section.section-5 
    .inner-wrap 
      .inner-change-status
        .inner-item
          select
            option(value="") -- Actions --
            option(value="") Active 
            option(value="") Inactive 
            option(value="") Deleted 
        .inner-item
          button Apply 
      
      .inner-search
        <i class="fa-solid fa-magnifying-glass"></i>
        input(type="text" placeholder="Search")
      
      .inner-button-create 
        a(href=`/${pathAdmin}/tour/create`) <i class="fa-solid fa-plus"></i> Create
      .inner-button-delete 
        a(href=`/${pathAdmin}/tour/trash`) <i class="fa-solid fa-trash"></i> Trash
  //- End Section 5

  //- Section 6
  section.section-6 
    .table-2 
      table 
        thead 
          tr 
            th(class="inner-center")
              input(type="checkbox" class="inner-check")
            th Tour Name
            th Thumbnail
            th Price
            th Availability
            th(class="inner-center") Position
            th(class="inner-center") Status
            th Created By
            th Updated By
            th Actions
        tbody
          tr 
            td(class="inner-center")
              input(type="checkbox" class="inner-check")
            td Tour Gold Coast
            td 
              img(src="/admin/assets/images/tour-1.jpeg" alt="Category 1" class="inner-avatar")
            td 
              div Adult: $200
              div Child: $100
              div Infant: $50
            td 
              div Adult: 10
              div Child: 20
              div Infant: 5
            td(class="inner-center") 1
            td(class="inner-center")
              .badge.badge-green Active
            td 
              div John Doe 
              div.inner-time 16:30 - 20/07/2025
            td 
              div John Doe 
              div.inner-time 10:30 - 22/07/2025
            td
              .inner-buttons 
                button(class="inner-edit") <i class="fa-regular fa-pen-to-square"></i>
                button(class="inner-delete") <i class="fa-regular fa-trash-can"></i>
          tr 
            td(class="inner-center")
              input(type="checkbox" class="inner-check")
            td Tour Gold Coast
            td 
              img(src="/admin/assets/images/tour-1.jpeg" alt="Category 1" class="inner-avatar")
            td 
              div Adult: $200
              div Child: $100
              div Infant: $50
            td 
              div Adult: 10
              div Child: 20
              div Infant: 5
            td(class="inner-center") 2
            td(class="inner-center")
              .badge.badge-red Inactive
            td 
              div John Doe 
              div.inner-time 16:30 - 20/07/2025
            td 
              div Jane Doe 
              div.inner-time 10:30 - 22/07/2025
            td
              .inner-buttons 
                button(class="inner-edit") <i class="fa-regular fa-pen-to-square"></i>
                button(class="inner-delete") <i class="fa-regular fa-trash-can"></i>
  //- End Section 6

  //- Section 7
  section.section-7 
    span(class="inner-label") Showing 1 - 9 of 78 entries
    select(class="inner-pagination")
      option Page 1
      option Page 2
      option Page 3
  //- End Section 7
extends ../layouts/default.pug

block main 
  h1.box-title Admin Account List

  //- Section 4
  section.section-4 
    .inner-wrap 
      .inner-item.inner-label
        <i class="fa-solid fa-filter"></i> Filter
      .inner-item
        select(filter-status)
          option(value="") Status 
          option(value="active") Active 
          option(value="inactive") Inactive
      .inner-item.inner-date
        input(type="date" filter-start-date)
        span -
        input(type="date" filter-end-date) 
      .inner-item 
        select(filter-role)
          option(value="") Role
          each item in roleList 
            option(
              value=item.id
            ) #{item.name}
      .inner-item.inner-reset(filter-reset)
        <i class="fa-solid fa-rotate-left"></i> Clear Filter
  //- End Section 4

  //- Section 5
  section.section-5 
    .inner-wrap 
      .inner-change-status
        .inner-item
          select
            option(value="") -- Actions --
            option(value="") Active 
            option(value="") Inactive 
            option(value="") Deleted 
        .inner-item
          button Apply 
      
      .inner-search
        <i class="fa-solid fa-magnifying-glass"></i>
        input(type="text" placeholder="Search")
      
      .inner-button-create 
        a(href=`/${pathAdmin}/setting/account-admin/create`)  <i class="fa-solid fa-plus"></i> Create
  //- End Section 5

  //- Section 6
  section.section-6 
    .table-2 
      table 
        thead 
          tr 
            th(class="inner-center")
              input(type="checkbox" class="inner-check")
            th Full Name
            th(class="inner-center") Avatar
            th Email
            th Phone
            th Role
            th Position
            th Status
            th Actions
        tbody
          if(accountAdminList.length == 0)
            tr 
              td(class="inner-center" colspan="8") No accounts found
          else 
            each item in accountAdminList
              tr 
                td(class="inner-center")
                  input(type="checkbox" class="inner-check")
                td #{item.fullName}
                td(class="inner-center") 
                  img(src=item.avatar alt=item.fullName class="inner-avatar")
                td #{item.email}
                td #{item.phone}
                td #{item.roleName}
                td #{item.positionCompany}
                td
                  if(item.status == "active")
                    .badge.badge-green Active
                  else if(item.status == "inactive")
                    .badge.badge-red Inactive
                  else if(item.status == "initial")
                    .badge.badge-orange Initial
                td
                  .inner-buttons 
                    a(
                      class="inner-edit"
                      href=`/${pathAdmin}/setting/account-admin/edit/${item.id}`
                    ) <i class="fa-regular fa-pen-to-square"></i>
                    button(
                      class="inner-delete"
                      button-delete
                      data-api=`/${pathAdmin}/setting/account-admin/delete/${item.id}`
                    ) <i class="fa-regular fa-trash-can"></i>
          
  //- End Section 6

  //- Section 7
  section.section-7 
    span(class="inner-label") Showing 1 - 9 of 78 entries
    select(class="inner-pagination")
      option Page 1
      option Page 2
      option Page 3
  //- End Section 7
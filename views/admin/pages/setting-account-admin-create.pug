extends ../layouts/default.pug

block main 
  h1.box-title Create Admin Account
  
  //- Section 8
  section.section-8 
    form#setting-account-admin-create-form
      .inner-group 
        label(class="inner-label" for="fullName") Full Name
        input(type="text" id="fullName" name="fullName")
      .inner-group 
        label(class="inner-label" for="email") Email
        input(type="email" id="email" name="email")
      .inner-group 
        label(class="inner-label" for="phone") Phone
        input(type="text" id="phone" name="phone")
      .inner-group
        label(class="inner-label" for="role") Role
        select(id="role" name="role")
          each item in roleList 
            option(value=item.id) #{item.name}
      .inner-group
        label(class="inner-label" for="positionCompany") Position 
        input(type="text" id="positionCompany" name="positionCompany")
      .inner-group 
        label(class="inner-label" for="status") Status 
        select(id="status" name="status")
          option(value="initial") Initial
          option(value="active") Active
          option(value="inactive") Inactive
      .inner-group
        label(class="inner-label" for="password") Password
        input(type="text" id="password" name="password")
      .inner-group.inner-two-col 
        label(class="inner-label" for="avatar") Avatar
        div(class="inner-upload-image")
          input(type="file" id="avatar" name="avatar" accept="image/*" filepond-image)
      .inner-button.inner-two-col 
        button Create 
    .inner-back 
      a(href=`/${pathAdmin}/setting/account-admin/list`) Back to Admin Account List
  //- End Section 8
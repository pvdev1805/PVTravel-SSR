extends ../layouts/default.pug

block main 
  h1.box-title Edit Admin Account
  
  //- Section 8
  section.section-8 
    form#setting-account-admin-edit-form
      .inner-group(style="display:none")
        input(type="text" id="id" name="id" value=accountAdminDetail.id)
      .inner-group 
        label(class="inner-label" for="fullName") Full Name
        input(type="text" id="fullName" name="fullName" value=accountAdminDetail.fullName)
      .inner-group 
        label(class="inner-label" for="email") Email
        input(type="email" id="email" name="email" value=accountAdminDetail.email)
      .inner-group 
        label(class="inner-label" for="phone") Phone
        input(type="text" id="phone" name="phone" value=accountAdminDetail.phone)
      .inner-group
        label(class="inner-label" for="role") Role
        select(id="role" name="role")
          each item in roleList 
            option(
              value=item.id
              selected=(accountAdminDetail.role == item.id ? true : false)
            ) #{item.name}
      .inner-group
        label(class="inner-label" for="positionCompany") Position 
        input(type="text" id="positionCompany" name="positionCompany" value=accountAdminDetail.positionCompany)
      .inner-group 
        label(class="inner-label" for="status") Status 
        select(id="status" name="status")
          option(
            value="initial"
            selected=(accountAdminDetail.status == "initial" ? true : false)
          ) Initial
          option(
            value="active"
            selected=(accountAdminDetail.status == "active" ? true : false)
          ) Active
          option(
            value="inactive"
            selected=(accountAdminDetail.status == "inactive" ? true : false)
          ) Inactive
      .inner-group
        label(class="inner-label" for="password") Password
        input(type="text" id="password" name="password")
      .inner-group.inner-two-col 
        label(class="inner-label" for="avatar") Avatar
        div(class="inner-upload-image" image-default=accountAdminDetail.avatar)
          input(type="file" id="avatar" name="avatar" accept="image/*" filepond-image)
      .inner-button.inner-two-col 
        button Save 
    .inner-back 
      a(href=`/${pathAdmin}/setting/account-admin/list`) Back to Admin Account List
  //- End Section 8
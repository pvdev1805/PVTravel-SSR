extends ../layouts/default.pug

block title
  title Website Info

block main 
  h1.box-title Website Info 
  
  //- Section 8
  section.section-8 
    form#setting-website-info-form
      .inner-group 
        label(class="inner-label" for="websiteName") Website Name
        input(type="text" id="websiteName" name="websiteName" value="PV.Travel")
      .inner-group 
        label(class="inner-label" for="phone") Phone
        input(type="text" id="phone" name="phone" value="0123456789")
      .inner-group 
        label(class="inner-label" for="email") Email
        input(type="email" id="email" name="email" value="contact@pv.travel.com")
      .inner-group
        label(class="inner-label" for="address") Address
        input(type="text" id="address" name="address" value="13 Street, Kearneys Spring, Toowoomba, QLD 4350")
      .inner-group
        label(class="inner-label" for="logo") Logo 
        div(class="inner-upload-image")
          input(type="file" id="logo" name="logo" accept="image/*" filepond-image)
      .inner-group 
        label(class="inner-label" for="favicon") Favicon
        div(class="inner-upload-image")
          input(type="file" id="favicon" name="favicon" accept="image/*" filepond-image)
      .inner-button.inner-two-col 
        button Update 
    .inner-back 
      a(href="#") Back to Settings List
  //- End Section 8
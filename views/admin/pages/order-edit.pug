extends ../layouts/default.pug

block title
  title Order: PVGST001

block main 
  h1.box-title Order: PVGST001
  
  //- Section 8
  section.section-8 
    form#order-edit-form
      .inner-group 
        label(class="inner-label" for="fullName") Customer Name
        input(type="text" id="fullName" name="fullName" value="Nicholas Cage")
      .inner-group
        label(class="inner-label" for="phone") Phone 
        input(type="text" id="phone" name="phone" value="0123456789")
      .inner-group.inner-two-col 
        label(class="inner-label" for="note") Note 
        textarea(id="note" name="note") Test 
      .inner-group
        label(class="inner-label" for="paymentMethod") Payment Method
        select(id="paymentMethod" name="paymentMethod")
          option(value="cash") Cash 
          option(value="card") Credit/Debit Card
          option(value="paypal") PayPal
          option(value="bank") Bank Transfer
      .inner-group
        label(class="inner-label" for="paymentStatus") Payment Status
        select(id="paymentStatus" name="paymentStatus")
          option(value="paid") Paid 
          option(value="pending") Pending
      .inner-group
        label(class="inner-label" for="createdAt") Ordered Date
        input(type="datetime-local" id="createdAt" name="createdAt" value="2025-08-20T10:30")
      .inner-group
        label(class="inner-label" for="status") Status
        select(id="status" name="status")
          option(value="initial") Initial 
          option(value="completed") Completed 
          option(value="cancelled") Cancelled
      .inner-group
        label(class="inner-label") Tour List
        .inner-order-list
          .inner-order-item
            .inner-order-image
              img(src="assets/images/tour-1.jpeg" alt="Order 1")
            .inner-order-content 
              .inner-order-name Tour Gold Coast
              .inner-order-text Adult: 3 x $200
              .inner-order-text Child: 2 x $100
              .inner-order-text Infant: 1 x $50
              .inner-order-text Departure Date: 01/09/2025
              .inner-order-text Departure Location: Brisbane 
          .inner-order-item
            .inner-order-image
              img(src="assets/images/tour-1.jpeg" alt="Order 2")
            .inner-order-content 
              .inner-order-name Tour Gold Coast
              .inner-order-text Adult: 3 x $200
              .inner-order-text Child: 2 x $100
              .inner-order-text Infant: 1 x $50
              .inner-order-text Departure Date: 01/09/2025
              .inner-order-text Departure Location: Brisbane
      .inner-group
        label(class="inner-label") Total Price
          .inner-order-total 
            div Total: $1800
            div Discount: $300
            div Coupon: SUMMERTOUR2025 
            div Checkout: <span class="inner-order-price">$1500</span>
      .inner-button.inner-two-col 
        button Update
    .inner-back 
      a(href="#") Back to Order List
  //- End Section 8
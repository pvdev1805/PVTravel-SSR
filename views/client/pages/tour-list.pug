extends ../layouts/default.pug
include ../mixins/box-breadcrumb.pug

block main 
  h1 #{pageTitle}

  //- Box Breadcrumb
  -
    var breadcrumb = {
      image: "/assets/images/banner-6.jpg",
      title: "International Tour",
      list: [
        {
          link: "/",
          title: "Home"
        },
        {
          link: "/tours",
          title: "International Tours"
        }
      ]
    }

  +box-breadcrumb(breadcrumb)
  //- End Box Breadcrumb

  // Section 9
  section.section-9
    .container
      .inner-wrap
        .inner-left
          // Box Filter
          .box-filter
            .inner-head
              .inner-title Filter
              i.fa-solid.fa-filter
            .inner-body
              .inner-group
                label.inner-label(for="") Departure
                select(name="")
                  option(value="") -- Select Departure --
                  option(value="") Perth
                  option(value="") Sydney
                  option(value="") Melbourne
              .inner-group
                label.inner-label(for="") Destination
                select(name="")
                  option(value="") -- Select Destination --
                  option(value="") Perth
                  option(value="") Sydney
                  option(value="") Melbourne
              .inner-group
                label.inner-label(for="") Departure Date
                input(
                  name="" 
                  type="date"
                  )
              .inner-group
                label.inner-label(for="") Number of Passengers
                .inner-input-list
                  .inner-input-item
                    span Adult:
                    input(
                      value="0" 
                      name="" 
                      type="number"
                      )
                  .inner-input-item
                    span Child:
                    input(
                      value="0" 
                      name="" 
                      type="number"
                      )
                  .inner-input-item
                    span Infant:
                    input(
                      value="0" 
                      name="" 
                      type="number"
                      )
              .inner-group
                label.inner-label(for="") Price Range ($)
                select(name="")
                  option(value="") -- Select Price Range --
                  option(value="") Under $300
                  option(value="") $300 - $500
                  option(value="") $500 - $700
                  option(value="") Over $700
              .inner-group
                button.inner-button Apply
          .inner-overlay
          // End Box Filter
        .inner-right
          .inner-info
            h2.inner-title International Tours
            .inner-desc
              | Asia Traveling: Asia is the largest continent in the world by a
              |   considerable margin, and it is rich in natural resources, such
              |   as petroleum, forests, fish, water, rice, copper and silver.
              |   Manufacturing in Asia has traditionally been strongest in East
              |   and Southeast Asia, particularly in China, Taiwan, South Korea,
              |   Japan, India, the Philippines, and Singapore. Asia is the
              |   largest continent in the world by a considerable margin, and it
              |   is rich in natural resources, such as petroleum, forests, fish,
